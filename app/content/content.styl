  top 240px
  right 10px
.rub
  font-family ptSans
//mods-ramka
.bot-left
  bottom ramkaV
  left ramkaH
.bot-right
  bottom ramkaV
  right ramkaH
  transform scale(-1,1)
.top-left
  top ramkaV
  left ramkaH
  transform scale(1,-1)
.top-right
  top ramkaV
  right ramkaH
  transform scale(-1,-1)
