lobster = 'Lobster', cursive;
comfortaa = 'Comfortaa', cursive;
marck = 'Marck Script', cursive;
ptSans = 'PT Sans', sans-serif;

ramkaV = -21px
ramkaH = -18px

.title
  min-width 1100px
  max-width 1200px
  margin 0 auto
  position relative
  margin-top 30px
  height 560px
  &--wolf
    position absolute
    left 0
    height 560px
    width 820px
    background-image url('../img/wolf.png')
    background-repeat no-repeat
  &--text
    position absolute
    right 0
    font-family: marck
    font-size 30px

.why
  width 1000px
  margin 0 auto
  margin-top 60px
  &--text
    font-family marck
    font-size 30px
  &--reason
    display inline-block
    vertical-align top
    margin-right 20px
    margin-top 50px
    width 180px
    font-family comfortaa
    &--image // 447FC7
      height 80px
      width 80px
      background-size 80px
      margin 0 auto
    &--head
      font-size 20px
      text-align center
      margin-top 10px
    &--body
      font-size 13px
      text-align center
      margin-top 6px

.product
  margin-top 80px
  &--title
    margin 0 auto
    font-family lobster
    font-size 30px
    border-bottom 6px solid #9E9E9E
    border-radius 6px
    padding-bottom 6px
  &--order
    width 430px
    margin 0 auto
    font-family comfortaa
    margin-top 10px
  &--head
    margin 0 auto
    margin-top 60px
    font-family lobster
    font-size 26px
  &--price
    font-family comfortaa
    font-size 26px
    margin 0 auto
    margin-top 10px
  &--description
    font-family comfortaa
    margin 0 auto
    margin-top 10px

.gallery
  min-width 800px
  max-width 980px
  height 200px
  margin 0 auto
  margin-top 70px
  margin-bottom 100px
  position relative
  &--photo
    width 200px
    height 200px
    cursor pointer
    position absolute
  &--photo:hover
    .gallery--ramka
      background-image url('../img/ramka-active.png')
  &--ramka
    position absolute
    width 76px
    height 76px
    background-image url('../img/ramka.png')
      

