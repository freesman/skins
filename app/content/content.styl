lobster = 'Lobster', cursive;
comfortaa = 'Comfortaa', cursive;
marck = 'Marck Script', cursive;
ptSans = 'PT Sans', sans-serif;

ramkaV = -21px
ramkaH = -18px

.title
  min-width 1100px
  max-width 1150px
  margin 0 auto
  position relative
  margin-top 30px
  height 560px
  &--wolf
    position absolute
    left 0
    height 560px
    width 820px
    background-image url('../img/wolf.png')
    background-repeat no-repeat
  &--text
    position absolute
    right 0
    font-family: marck
    font-size 30px

.why
  width 1000px
  border 1px solid black
  margin 0 auto
  margin-top 40px
  &--text
    font-family marck
    font-size 30px

.product
  margin-top 40px
  &--title
    margin 0 auto
    font-family lobster
    font-size 30px
    border-bottom 6px solid #9E9E9E
    border-radius 6px
    padding-bottom 6px
  &--order
    width 430px
    margin 0 auto
    font-family comfortaa
    margin-top 10px
  &--head
    margin 0 auto
    margin-top 20px
    font-family lobster
    font-size 26px
  &--price
    font-family comfortaa
    font-size 26px
    margin 0 auto
    margin-top 10px
  &--description
    font-family comfortaa
    margin 0 auto
    margin-top 10px

.gallery
  margin 0 auto
  margin-top 70px
  margin-bottom 40px
  &--photo
    width 200px
    height 200px
    background-color gray
    display inline-block
    margin-right 60px
    position relative
    cursor pointer
  &--photo:hover
    .gallery--ramka
      background-image url('../img/ramka-active.png')
  &--ramka
    position absolute
    width 76px
    height 76px
    background-image url('../img/ramka.png')
      

